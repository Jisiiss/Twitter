<!DOCTYPE html>
<html>
    <head>
        <link rel="icon" href="{{ asset('build/assets/images/favicon.ico') }}" />
        <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta charset="UTF-8">
        <meta name="description" content="{% block meta_description %}{% endblock %}" />
        <title>{% block meta_title %}API Twitter | Back Office{% endblock %}</title>
        {% block stylesheets %}
            <link href="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.4.0/css/bootstrap4-toggle.min.css" rel="stylesheet">
            {{ encore_entry_link_tags('admin') }}
        {% endblock %}

        {% if app.environment in ['prod'] %}
        <!-- Global site tag (gtag.js) - Google Analytics -->
        {% endif %}
    </head>
    <body>
        {% block flashMessages %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="alert-fixed">
                        <div class="{{ label }}">
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                            {{ message|raw }}
                        </div>
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% include 'backoffice/include/menu.html.twig' %}

        <div id="preloader">
            <img class="img-fluid" src="{{ asset('build/assets/images/preloader.gif') }}" alt="Smag Graphique"/>
        </div>

        <div class="page-container">
            <div class="header-page-container">
                <a href="{{ path('logout') }}" class="btn-logout" title="Déconnexion">Déconnexion</a>
            </div>
            {% block body %}{% endblock %}
        </div>

        {% block javascripts %}
            {{ encore_entry_script_tags('plugins') }}
            {{ encore_entry_script_tags('admin') }}
            <script src="https://cdn.jsdelivr.net/gh/gitbrent/bootstrap4-toggle@3.4.0/js/bootstrap4-toggle.min.js"></script>
        {% endblock %}
    </body>
</html>
