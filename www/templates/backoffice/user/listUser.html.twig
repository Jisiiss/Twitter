{% extends 'backoffice/base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <h1>Liste utilisateurs</h1>

        <div class="card collapsable-card">
            <div class="card-header">
                <a href="" title="Action">Action</a>
            </div>
            <div class="card-body">
                <a href="{{ path('backoffice/user/edit') }}" title="Nouveau" class="btn btn-info btn-add">Nouveau</a>
            </div>
        </div>

        <div class="table-wrapper-responsive">
            <table class="table table-striped dataTable">
                <thead>
                <tr>
                    <th>Id</th>
                    <th>Email</th>
                    <th>Roles</th>
                    <th>Créé le</th>
                    <th></th>
                </tr>
                </thead>
                <tbody id="tbody-contentblocks">
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% for role in user.roles %}
                                {{ role }}<br />
                            {% endfor %}
                        </td>
                        <td>{{ user.timeCreate|date('d/m/Y H:i:s') }}</td>
                        <td>
                            <a href="{{ path('backoffice/user/edit', {'id': user.id}) }}" title="Editer"><i class="fas fa-edit"></i></a>
                            <a href="{{ path('backoffice/user/change-password', {'id': user.id}) }}" title="Changer le mot de passe"><i class="fas fa-key"></i></a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>


    </div>
{% endblock %}
